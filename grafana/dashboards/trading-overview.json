{
  "dashboard": {
    "title": "Trading System Overview",
    "tags": ["trading", "overview", "performance"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Account Balance",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "trading_balance_usdt",
            "legendFormat": "Balance USDT"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1000, "color": "yellow"},
                {"value": 10000, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Daily P&L",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(trading_realized_pnl_total[24h]))",
            "legendFormat": "Daily P&L"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": -100, "color": "red"},
                {"value": 0, "color": "yellow"},
                {"value": 100, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Win Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "(sum(trading_trades_won_total) / sum(trading_trades_total)) * 100",
            "legendFormat": "Win Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 40, "color": "yellow"},
                {"value": 50, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Open Positions",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "trading_open_positions",
            "legendFormat": "Open Positions"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "blue"},
                {"value": 3, "color": "yellow"},
                {"value": 6, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Cumulative P&L",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "trading_realized_pnl_total",
            "legendFormat": "Realized P&L"
          },
          {
            "expr": "trading_unrealized_pnl_total",
            "legendFormat": "Unrealized P&L"
          }
        ],
        "yaxes": [
          {"format": "currencyUSD", "label": "P&L"},
          {"format": "short"}
        ],
        "legend": {"show": true, "alignAsTable": true, "values": true}
      },
      {
        "id": 6,
        "title": "Trading Activity",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(trading_trades_total[5m])",
            "legendFormat": "Trades/min"
          },
          {
            "expr": "rate(trading_decisions_total[5m])",
            "legendFormat": "Decisions/min"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Rate"},
          {"format": "short"}
        ],
        "legend": {"show": true}
      },
      {
        "id": 7,
        "title": "Position Distribution by Symbol",
        "type": "piechart",
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 17},
        "targets": [
          {
            "expr": "sum by (symbol) (trading_position_size_usdt)",
            "legendFormat": "{{symbol}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Decision Latency",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 17},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(trading_decision_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(trading_decision_duration_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [2], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "frequency": "1m",
          "handler": 1,
          "name": "High Decision Latency",
          "message": "Trading decision latency > 2s"
        }
      },
      {
        "id": 9,
        "title": "Recent Trades",
        "type": "table",
        "gridPos": {"h": 9, "w": 24, "x": 0, "y": 26},
        "targets": [
          {
            "expr": "trading_trades_total",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {"id": "organize", "options": {"excludeByName": {}, "indexByName": {}, "renameByName": {}}}
        ]
      }
    ]
  }
}
