# ============================================================================
# Docker Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains sensitive information
#
# Quick setup:
# 1. cp .env.example .env
# 2. Edit .env with your actual values
# 3. docker-compose up -d
#
# For detailed instructions, see: docs/DOCKER_SETUP_GUIDE.md
# ============================================================================

# ============================================================================
# Environment Mode
# ============================================================================
# Options: development, testnet, production
ENVIRONMENT=testnet

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================
POSTGRES_DB=trader_testnet
POSTGRES_USER=trader
# ⚠️ CHANGE THIS: Use a strong, unique password
POSTGRES_PASSWORD=changeme_secure_password_here
POSTGRES_PORT=5432

# ============================================================================
# Redis Configuration
# ============================================================================
# ⚠️ CHANGE THIS: Use a strong, unique password
REDIS_PASSWORD=changeme_redis_password_here
REDIS_PORT=6379

# ============================================================================
# Application Configuration
# ============================================================================
APP_PORT=8000
LOG_LEVEL=INFO

# ============================================================================
# Trading Configuration
# ============================================================================
# Paper trading mode (true = simulated, false = real money)
PAPER_TRADING=true

# Enable/disable trading (keep false until thoroughly tested)
TRADING_ENABLED=false

# Use testnet (true) or production (false)
BINANCE_TESTNET=true

# ============================================================================
# Binance Testnet API Configuration
# ============================================================================
# Get your testnet API keys from: https://testnet.binance.vision/
# ⚠️ FILL THESE IN with your actual testnet keys
BINANCE_TESTNET_API_KEY=
BINANCE_TESTNET_API_SECRET=
BINANCE_TESTNET_ENABLED=true

# ============================================================================
# Binance Production API Configuration (for production deployment)
# ============================================================================
# ⚠️ Use only for production on Ubuntu server
# ⚠️ Enable IP whitelist on Binance
# ⚠️ Use API keys with minimal required permissions
BINANCE_API_KEY=
BINANCE_API_SECRET=

# ============================================================================
# OpenRouter LLM API Configuration
# ============================================================================
# Get your API key from: https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_DEFAULT_MODEL=deepseek/deepseek-v3.2-exp

# LLM Cost Limits (USD)
LLM_DAILY_COST_LIMIT=5.00
LLM_MONTHLY_COST_LIMIT=100.00

# ============================================================================
# Risk Management Configuration
# ============================================================================
# Starting capital in CHF
STARTING_CAPITAL_CHF=2627.00

# Circuit breaker threshold (daily loss percentage)
CIRCUIT_BREAKER_THRESHOLD_PCT=7.0

# Maximum position size per trade (% of capital)
MAX_POSITION_SIZE_PCT=10.0

# Leverage range
MIN_LEVERAGE=5
MAX_LEVERAGE=40

# ============================================================================
# Monitoring Configuration (Optional)
# ============================================================================
# Enable monitoring stack (Prometheus + Grafana)
# Set to false to save resources on Mac
ENABLE_MONITORING=false

PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# Prometheus retention
PROMETHEUS_RETENTION_DAYS=30

# ============================================================================
# Additional Features
# ============================================================================
# Enable WebSocket for real-time data
ENABLE_WEBSOCKET=true

# Enable position reconciliation
ENABLE_POSITION_RECONCILIATION=true

# ============================================================================
# Development Settings (for testing only)
# ============================================================================
DEBUG=false
LOG_REQUESTS=false
LOG_SQL_QUERIES=false

# ============================================================================
# Alert Configuration (Optional)
# ============================================================================
# Slack webhook for alerts
SLACK_WEBHOOK_URL=

# Email alerts
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=
EMAIL_SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_TO=
