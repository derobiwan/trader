# LLM Crypto Trading System - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Database Configuration
# =============================================================================
POSTGRES_DB=trader
POSTGRES_USER=trader
POSTGRES_PASSWORD=your_secure_postgres_password_here  # CHANGE THIS!
POSTGRES_PORT=5432

# =============================================================================
# REQUIRED: Redis Configuration
# =============================================================================
REDIS_PASSWORD=your_secure_redis_password_here  # CHANGE THIS!
REDIS_PORT=6379

# =============================================================================
# REQUIRED: Exchange API Keys
# =============================================================================
# Binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=true  # Use testnet for testing

# Bybit (optional)
BYBIT_API_KEY=your_bybit_api_key
BYBIT_API_SECRET=your_bybit_api_secret
BYBIT_TESTNET=true

# =============================================================================
# REQUIRED: LLM API Configuration
# =============================================================================
# OpenRouter (recommended - supports multiple LLMs)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=anthropic/claude-3-haiku  # Cost-effective option

# OpenAI (alternative)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# Anthropic (alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-haiku-20240307

# =============================================================================
# Application Configuration
# =============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO
APP_PORT=8000

# =============================================================================
# Trading Configuration
# =============================================================================
# IMPORTANT: Start with paper trading enabled!
PAPER_TRADING=true
TRADING_ENABLED=false  # Set to true only after 7-day validation

# Trading Parameters
TRADING_INTERVAL=180  # seconds (3 minutes)
MAX_POSITION_SIZE=0.10  # 10% of portfolio per position
MAX_TOTAL_EXPOSURE=0.80  # 80% maximum total exposure
DAILY_LOSS_LIMIT=-0.07  # -7% circuit breaker

# Symbols to trade (comma-separated)
TRADING_SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT,BNBUSDT,ADAUSDT,DOGEUSDT

# =============================================================================
# Risk Management
# =============================================================================
STOP_LOSS_PCT=0.03  # 3% stop loss
TAKE_PROFIT_PCT=0.06  # 6% take profit
KELLY_FRACTION=0.25  # Use 25% of Kelly Criterion
MAX_LEVERAGE=3  # Maximum leverage (be conservative!)

# =============================================================================
# Optional: Monitoring
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin  # Change for production!

# =============================================================================
# Optional: Notifications
# =============================================================================
# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email (for critical alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
ALERT_EMAIL=your_alert_email@gmail.com

# =============================================================================
# Advanced Configuration
# =============================================================================
# Database pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis settings
REDIS_MAX_CONNECTIONS=50

# Celery workers
CELERY_CONCURRENCY=2
CELERY_LOGLEVEL=INFO

# API rate limits
MAX_REQUESTS_PER_MINUTE=100

# Backtesting
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31

# =============================================================================
# Development (ignore for production)
# =============================================================================
DEBUG=false
RELOAD=false
