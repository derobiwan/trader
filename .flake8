[flake8]
max-line-length = 88
# Only ignore errors that conflict with Black or are project decisions
extend-ignore = E203, E266, E501, W503, B008, D
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    .tox,
    node_modules
max-complexity = 15
