# Trading System Environment Configuration
# Sprint 1 Stream C: Infrastructure Configuration
#
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to git - it's in .gitignore
#
# Author: Infrastructure Specialist
# Date: 2025-10-28

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_system
DB_USER=trading_user
DB_PASSWORD=changeme_secure_password

# Connection pool settings
DB_MIN_POOL_SIZE=10
DB_MAX_POOL_SIZE=50
DB_COMMAND_TIMEOUT=30

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache settings
CACHE_DEFAULT_TTL_SECONDS=300
CACHE_ENABLED=true

# ============================================================================
# Monitoring Configuration
# ============================================================================
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION_DAYS=30

# ============================================================================
# Trading System Configuration
# ============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# Exchange API Keys (NEVER COMMIT REAL KEYS)
# ============================================================================
# Bybit
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_TESTNET=true

# Binance (optional)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true

# ============================================================================
# LLM API Configuration
# ============================================================================
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3-5-sonnet-20241022

# LLM cost limits (USD)
LLM_DAILY_COST_LIMIT=5.00
LLM_MONTHLY_COST_LIMIT=100.00

# ============================================================================
# Risk Management
# ============================================================================
# Capital (CHF)
STARTING_CAPITAL_CHF=2627.00

# Circuit breaker threshold (daily loss %)
CIRCUIT_BREAKER_THRESHOLD_PCT=7.0

# Maximum position size per trade (% of capital)
MAX_POSITION_SIZE_PCT=10.0

# Leverage range
MIN_LEVERAGE=5
MAX_LEVERAGE=40

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# API keys for authentication
API_KEY=your_api_key_here

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_WEBSOCKET=true
ENABLE_POSITION_RECONCILIATION=true

# ============================================================================
# Alerting (Optional)
# ============================================================================
# Slack webhook for alerts
SLACK_WEBHOOK_URL=

# Email alerts
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=
EMAIL_SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# ============================================================================
# Development Settings
# ============================================================================
# Debug mode
DEBUG=true

# Enable request logging
LOG_REQUESTS=true

# Enable SQL query logging
LOG_SQL_QUERIES=false
